<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "bo.com.orangegroup.pgtest"
        version   = "1.0.0">
		
    <name>Test crosswalk 2</name>
    <description> 
        Somo una revista virual con el mejor contenido en vida social y entretenimiento de Santa Cruz
    </description>
	
    <author href="https://www.orangegroup.com.bo" email="info@orangegroup.com.bo">
        Orange Group SRL
    </author>
    
    <access origin="*" />
    
    <preference name='phonegap-version' value='cli-5.1.1' />
	
    <preference name="Fullscreen" value="false" />
    <preference name="orientation" value="portrait" />  
    <preference name="useBrowserHistory" value="true" />
    <preference name="exit-on-suspend" value="false" /> 
    <preference name="showTitle" value="false" /> 
    
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name='org.crosswalk.engine'  source='pgb' />
    
    <plugin name="cordova-plugin-whitelist" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
</widget>
